{
  "name": "esnyc-lesson-search-react",
  "version": "2.0.0",
  "type": "module",
  "description": "ESYNYC Lesson Library Search Interface - A searchable database of 831 tagged Edible Schoolyard NYC lesson plans",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "import-data": "node scripts/import-data.js",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "deploy:vercel": "npm run build && vercel --prod",
    "test:lighthouse": "npm run build && lhci autorun",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/",
    "test:rls": "node scripts/test-rls-policies.mjs",
    "db:types": "supabase gen types typescript --local > src/types/database.types.ts",
    "db:types:remote": "supabase gen types typescript --linked > src/types/database.types.ts",
    "db:reset": "supabase db reset --local",
    "db:push": "supabase db push --include-all",
    "test:openai": "npx tsx scripts/test-openai-api.ts",
    "backfill:embeddings": "npx tsx scripts/backfill-embeddings.ts",
    "auto-resolve-duplicates": "npx tsx scripts/auto-resolve-duplicates.ts",
    "analyze-duplicates-v2": "npx tsx scripts/analyze-duplicates-v2.ts",
    "analyze-duplicates-v3": "npx tsx scripts/analyze-duplicates-v3.ts",
    "undo-resolutions": "npx tsx scripts/undo-all-duplicate-resolutions.ts",
    "restore-missing": "npx tsx scripts/identify-and-restore-missing-lessons.ts",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui"
  },
  "keywords": [
    "education",
    "lesson-plans",
    "search",
    "edible-schoolyard",
    "teaching-resources"
  ],
  "author": "ESNYC",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@sentry/react": "^10.27.0",
    "@supabase/supabase-js": "^2.84.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-virtual": "^3.13.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-select": "^5.0.1",
    "@vitejs/plugin-react": "^5.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.0",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "react-select": "^5.10.2",
    "recharts": "^3.1.2",
    "typescript": "^5.9.2",
    "vite": "^7.2.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "csv-parse": "^6.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "http-server": "^14.1.1",
    "jsdom": "^27.2.0",
    "openai": "^6.9.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "tiktoken": "^1.0.22",
    "vite-bundle-analyzer": "^1.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
