{
  "name": "esnyc-lesson-search-react",
  "version": "1.0.0",
  "type": "module",
  "description": "ESNYC Lesson Library Search Interface - A searchable database of 831 tagged Edible Schoolyard NYC lesson plans",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "import-data": "node scripts/import-data.js",
    "sync-algolia": "node scripts/sync-to-algolia.js",
    "configure-synonyms": "node scripts/configure-synonyms.js",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "deploy:vercel": "npm run build && vercel --prod",
    "test:lighthouse": "npm run build && lhci autorun",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/"
  },
  "keywords": [
    "education",
    "lesson-plans",
    "search",
    "edible-schoolyard",
    "teaching-resources"
  ],
  "author": "ESNYC",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@supabase/supabase-js": "^2.51.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.83.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "algoliasearch": "^5.33.0",
    "dotenv": "^17.2.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-instantsearch": "^7.16.1",
    "react-router-dom": "^7.6.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@lhci/cli": "^0.15.1",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "vite-bundle-analyzer": "^1.1.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
